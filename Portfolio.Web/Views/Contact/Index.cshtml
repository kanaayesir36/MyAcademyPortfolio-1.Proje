@model List<Portfolio.Web.Entities.ContactInfo>

@{
    ViewData["Title"] = "İletişim Bilgileri";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-primary fw-bold">📍 İletişim Bilgileri</h2>

    <div class="table-responsive shadow-sm rounded-4">
        <table class="table table-hover align-middle text-center mb-0" style="background-color: #ffffff;">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Adres</th>
                    <th>Telefon</th>
                    <th>Email</th>
                    <th>Harita</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr class="align-middle">
                            <td>@item.ContactInfoId</td>
                            <td class="text-start">@item.Address</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Email</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.MapUrl))
                                {
                                    <a href="@item.MapUrl" target="_blank" class="btn btn-sm btn-outline-info shadow-sm rounded-2">
                                        <i class="bi bi-geo-alt-fill me-1"></i> Haritayı Gör
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Yok</span>
                                }
                            </td>
                            <td>
                                <a asp-action="UpdateContact" asp-route-id="@item.ContactInfoId" class="btn btn-warning btn-sm shadow-sm rounded-2 me-1">
                                    <i class="bi bi-pencil me-1"></i> Düzenle
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-muted py-4">Henüz iletişim bilgisi eklenmemiş.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
