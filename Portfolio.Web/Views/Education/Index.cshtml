@model List<Education>
@{
    ViewData["Title"] = "Eğitim Bilgileri";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Okul Adı</th>
            <th>Bölüm</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Açıklama</th>
            <th class="text-center" style="width:120px">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.SchoolName</td>
                <td>@item.Department</td>
                <td>@item.StartYear</td>
                <td>@item.EndYear</td>
                <td>@item.Description</td>
                <td class="d-flex justify-content-center gap-2">
                    <a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-outline-danger">Sil</a>
                    <a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-outline-info btn-sm">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Education/CreateEducation" class="btn btn-outline-primary">Yeni Eğitim Oluştur</a>