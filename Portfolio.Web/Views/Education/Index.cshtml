@model List<Portfolio.Web.Entities.Experience>
@{
    ViewData["Title"] = "Deneyimlerim";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2 class="text-3xl font-bold mb-6">Deneyimlerim</h2>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var item in Model)
    {
        <div class="border rounded-lg shadow-lg p-5 hover:shadow-xl transition-shadow duration-300 bg-white">
            <div class="flex flex-col justify-between h-full">
                <div>
                    <h3 class="text-xl font-semibold mb-2 text-gray-800">@item.Title</h3>
                    <p class="text-gray-700 mb-1"><strong>Şirket:</strong> @item.Company</p>
                    <p class="text-gray-700 mb-1"><strong>Şehir:</strong> @item.City</p>
                    <p class="text-gray-700 mb-1">
                        <strong>Dönem:</strong>
                        @item.StartYear - @(string.IsNullOrEmpty(item.EndYear) ? "Devam Ediyor" : item.EndYear)
                    </p>
                </div>

                <div class="mt-4">
                    
                </div>
            </div>
        </div>
    }
</div>
