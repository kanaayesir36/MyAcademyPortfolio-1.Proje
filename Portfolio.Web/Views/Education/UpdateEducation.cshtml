@model Portfolio.Web.Entities.Education
@{
    ViewData["Title"] = "UpdateEducation";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Eğitim Bilgisi Güncelle</h2>

<form asp-action="UpdateEducation" method="post" class="mt-4">
    <input type="hidden" asp-for="EducationId" />

    <div class="form-group mb-3">
        <label>Okul Adı</label>
        <input asp-for="SchoolName" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Bölüm</label>
        <input asp-for="Department" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Başlangıç Yılı</label>
        <input asp-for="StartYear" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Bitiş Yılı</label>
        <input asp-for="EndYear" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="/Education/Index" class="btn btn-secondary">Geri Dön</a>
</form>
